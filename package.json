{
  "name": "shasta-boilerplate",
  "version": "0.0.1",
  "description": "shastajs boilerplate",
  "main": "bin/server/index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "compile": "DEBUG=app:* NODE_ENV=production node --harmony bin/compile",
    "lint": "eslint . ./",
    "lint:fix": "npm run lint -- --fix",
    "start": "npm run dev",
    "prod": "NODE_ENV=production PORT=$PORT node bin/server",
    "deploy": "rm -rf dist && NODE_ENV=production npm run compile && git add dist -A && git commit -m 'deploy' && git push heroku master",
    "dev": "nodemon",
    "dev:no-debug": "DEBUG=app:* NODE_ENV=development npm run dev -- --no_debug"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shastajs/boilerplate.git"
  },
  "author": "Contra <yo@contra.io> (http://contra.io)",
  "license": "MIT",
  "dependencies": {
    "app-config-chain": "^1.0.3",
    "app-module-path": "^1.0.5",
    "babel-core": "^6.3.17",
    "babel-eslint": "6.0.0-beta.2",
    "babel-loader": "^6.2.0",
    "babel-plugin-add-module-exports": "^0.1.1",
    "babel-plugin-react-transform": "^2.0.0-beta1",
    "babel-plugin-transform-runtime": "^6.3.13",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-register": "^6.3.13",
    "babel-runtime": "^6.3.19",
    "body-parser": "^1.14.2",
    "chalk": "^1.1.1",
    "compose-middleware": "^2.0.1",
    "compression": "^1.6.0",
    "connect-history-api-fallback": "^1.1.0",
    "connect-redis": "^3.0.2",
    "cookie-parser": "^1.4.1",
    "debug": "^2.2.0",
    "errorhandler": "^1.4.2",
    "express": "^4.13.3",
    "express-session": "^1.13.0",
    "method-override": "^2.3.5",
    "palisade": "^1.0.1",
    "passport": "^0.3.2",
    "passport-facebook": "^2.0.0",
    "passport-google-oauth20": "^1.0.0",
    "pmx": "^0.6.0",
    "redis": "^2.4.2",
    "require-dir": "^0.3.0",
    "rethink-decl": "^1.0.0",
    "rethinkdb-change-stream": "^1.0.0",
    "superagent": "^1.7.1",
    "sutro": "shastajs/sutro",
    "thinky": "^2.2.4"
  },
  "devDependencies": {
    "babel-cli": "^6.4.5",
    "chalk": "^1.1.1",
    "classnames": "^2.2.1",
    "css-loader": "^0.23.0",
    "cssnano": "^3.3.2",
    "eslint": "^2.2.0",
    "eslint-config-rackt": "^1.1.1",
    "eslint-loader": "^1.1.1",
    "eslint-plugin-babel": "^3.0.0",
    "eslint-plugin-react": "^4.0.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.4",
    "glob-loader": "contra/glob-loader",
    "html-webpack-plugin": "^2.0.0",
    "immutable": "^3.7.6",
    "isparta-loader": "^2.0.0",
    "jif": "^1.0.1",
    "json-loader": "^0.5.4",
    "node-sass": "^3.3.3",
    "nodemon": "^1.8.1",
    "normalizr": "^2.0.0",
    "postcss-loader": "^0.8.0",
    "react": "^0.14.0",
    "react-document-meta": "^2.0.2",
    "react-dom": "^0.14.0",
    "react-immutable-proptypes": "^1.5.1",
    "react-responsive": "^1.0.1",
    "react-transform-catch-errors": "^1.0.0",
    "react-transform-hmr": "^1.0.0",
    "redbox-react": "^1.2.2",
    "redux-storage": "^1.4.2",
    "redux-sutro": "shastajs/redux-sutro",
    "remove-fb-hash": "^1.0.0",
    "rucksack-css": "^0.8.5",
    "sass-loader": "^3.0.0",
    "shasta": "shastajs/shasta",
    "shasta-data-view": "shastajs/shasta-data-view",
    "shasta-forms": "shastajs/shasta-forms",
    "shasta-logger": "^2.0.0",
    "shasta-router": "shastajs/shasta-router",
    "style-loader": "^0.13.0",
    "tahoe": "shastajs/tahoe",
    "url-loader": "^0.5.7",
    "uuid": "^2.0.1",
    "webpack": "^1.12.9",
    "webpack-dev-middleware": "^1.4.0",
    "webpack-hot-middleware": "^2.6.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-0"
    ],
    "plugins": [
      "transform-runtime",
      "add-module-exports"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "rackt",
    "plugins": [
      "react"
    ],
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "globals": {
      "__DEV__": true,
      "__PROD__": true,
      "__INITIAL_STATE__": true
    },
    "ecmaFeatures": {
      "modules": true,
      "jsx": true
    },
    "rules": {
      "react/display-name": 1,
      "react/forbid-prop-types": 1,
      "react/jsx-boolean-value": 1,
      "react/jsx-curly-spacing": 1,
      "react/jsx-equals-spacing": 1,
      "react/jsx-key": 1,
      "react/jsx-no-duplicate-props": 1,
      "react/jsx-no-undef": 1,
      "react/jsx-pascal-case": 1,
      "react/jsx-uses-react": 1,
      "react/jsx-uses-vars": 1,
      "react/no-danger": 1,
      "react/no-deprecated": 1,
      "react/no-did-mount-set-state": 1,
      "react/no-did-update-set-state": 1,
      "react/no-direct-mutation-state": 1,
      "react/no-is-mounted": 1,
      "react/no-multi-comp": 1,
      "react/no-string-refs": 1,
      "react/no-unknown-property": 1,
      "react/prefer-es6-class": 1,
      "react/prop-types": 1,
      "react/react-in-jsx-scope": 1,
      "react/require-extension": 1,
      "react/self-closing-comp": 1,
      "react/sort-comp": 1,
      "react/wrap-multilines": 1,
      "no-console": 0,
      "semi": [
        2,
        "never"
      ]
    }
  }
}
